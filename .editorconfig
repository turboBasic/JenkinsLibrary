root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yaml,yml,json}]
indent_size = 2

# Trailing whitespaces using for line break
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Windows files should use crlf
[*.{bat,cmd,ps1}]
end_of_line = crlf
